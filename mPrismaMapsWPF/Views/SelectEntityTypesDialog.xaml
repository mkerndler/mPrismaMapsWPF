<Window x:Class="mPrismaMapsWPF.Views.SelectEntityTypesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Entity Types to Import"
        Height="420" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Select Entity Types to Import"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,12"/>

        <!-- Info message -->
        <TextBlock Grid.Row="1"
                   x:Name="InfoText"
                   Text="Choose which entity types to import:"
                   TextWrapping="Wrap"
                   Foreground="#FFCCCCCC"
                   Margin="0,0,0,12"/>

        <!-- Select All / Select None buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <Button x:Name="SelectAllButton"
                    Content="Select All"
                    Width="85"
                    Height="24"
                    Margin="0,0,8,0"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    Click="SelectAllButton_Click"/>
            <Button x:Name="SelectNoneButton"
                    Content="Select None"
                    Width="85"
                    Height="24"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    Click="SelectNoneButton_Click"/>
        </StackPanel>

        <!-- Entity types list with checkboxes -->
        <ListBox Grid.Row="3"
                 x:Name="EntityTypesListBox"
                 Background="#FF2D2D2D"
                 Foreground="White"
                 BorderBrush="#FF555555"
                 Margin="0,0,0,12"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="4,2"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF3C3C3C"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding TypeName}"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Count, StringFormat='({0:N0})'}"
                                   Foreground="#FF888888"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Summary text -->
        <TextBlock Grid.Row="4"
                   x:Name="SummaryText"
                   Foreground="#FFAAAAAA"
                   Margin="0,0,0,16"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="ImportButton"
                    Content="Import"
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    Click="ImportButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="28"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
