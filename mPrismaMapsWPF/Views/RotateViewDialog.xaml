<Window x:Class="mPrismaMapsWPF.Views.RotateViewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rotate View"
        Width="300"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">

    <Window.Resources>
        <Style x:Key="PresetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Enter rotation angle:"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBox x:Name="AngleTextBox"
                     Width="100"
                     Height="28"
                     Background="#FF3C3C3C"
                     Foreground="White"
                     BorderBrush="#FF555555"
                     VerticalContentAlignment="Center"
                     Padding="8,0"
                     Text="0"/>
            <TextBlock Text=" degrees"
                       Foreground="#FFAAAAAA"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="Quick presets:"
                   Foreground="#FFAAAAAA"
                   FontSize="12"
                   Margin="0,0,0,8"/>

        <WrapPanel Grid.Row="3" Margin="0,0,0,16">
            <Button Content="0" Tag="0" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}"/>
            <Button Content="90" Tag="90" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}"/>
            <Button Content="180" Tag="180" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}"/>
            <Button Content="270" Tag="270" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}"/>
            <Button Content="45" Tag="45" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}"/>
            <Button Content="-45" Tag="-45" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}"/>
        </WrapPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Apply"
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderBrush="#FF0078D4"
                    Click="ApplyButton_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    Height="28"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
