<Window x:Class="mPrismaMapsWPF.Views.ScaleMapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Map"
        Width="300"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">

    <Window.Resources>
        <Style x:Key="PresetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Enter scale factor:"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,12"/>

        <TextBox x:Name="FactorTextBox"
                 Grid.Row="1"
                 Width="160"
                 HorizontalAlignment="Left"
                 Height="28"
                 Background="#FF3C3C3C"
                 Foreground="White"
                 BorderBrush="#FF555555"
                 VerticalContentAlignment="Center"
                 Padding="8,0"
                 Margin="0,0,0,16"
                 Text="1"/>

        <TextBlock Grid.Row="2"
                   Text="Quick presets:"
                   Foreground="#FFAAAAAA"
                   FontSize="12"
                   Margin="0,0,0,8"/>

        <WrapPanel Grid.Row="3" Margin="0,0,0,16">
            <Button Content="×0.001" Tag="0.001" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}" ToolTip="mm → m"/>
            <Button Content="×0.01" Tag="0.01" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}" ToolTip="cm → m"/>
            <Button Content="×0.0254" Tag="0.0254" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}" ToolTip="inch → m"/>
            <Button Content="×100" Tag="100" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}" ToolTip="m → cm"/>
            <Button Content="×1000" Tag="1000" Click="PresetButton_Click" Style="{StaticResource PresetButtonStyle}" ToolTip="m → mm"/>
        </WrapPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Apply"
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderBrush="#FF0078D4"
                    Click="ApplyButton_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    Height="28"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
