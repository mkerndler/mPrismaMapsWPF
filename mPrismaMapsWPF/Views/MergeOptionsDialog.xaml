<Window x:Class="mPrismaMapsWPF.Views.MergeOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Merge DWG/DXF"
        Width="380"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Source file info -->
        <TextBlock Grid.Row="0"
                   x:Name="SourceFileText"
                   Foreground="#FFAAAAAA"
                   FontSize="11"
                   TextTrimming="CharacterEllipsis"
                   Margin="0,0,0,12"/>

        <!-- Layer conflict strategy -->
        <TextBlock Grid.Row="1"
                   Text="Layer name conflict strategy:"
                   Foreground="White"
                   FontSize="13"
                   Margin="0,0,0,6"/>

        <ComboBox Grid.Row="2"
                  x:Name="LayerStrategyCombo"
                  Background="#FF3C3C3C"
                  Foreground="White"
                  BorderBrush="#FF555555"
                  Height="28"
                  Margin="0,0,0,16"
                  SelectionChanged="LayerStrategyCombo_SelectionChanged">
            <ComboBoxItem Content="Keep primary layer (default)" Tag="KeepPrimary" IsSelected="True"/>
            <ComboBoxItem Content="Overwrite with secondary layer" Tag="KeepSecondary"/>
            <ComboBoxItem Content="Add secondary layer as 'â€¦_merged'" Tag="RenameSecondary"/>
        </ComboBox>

        <!-- Optional offset -->
        <TextBlock Grid.Row="3"
                   Text="Optional offset (applied to all merged entities):"
                   Foreground="White"
                   FontSize="13"
                   Margin="0,0,0,6"/>

        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="X:" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Grid.Column="1"
                     x:Name="OffsetXTextBox"
                     Text="0"
                     Background="#FF3C3C3C"
                     Foreground="White"
                     BorderBrush="#FF555555"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Padding="8,0"/>

            <TextBlock Grid.Column="3" Text="Y:" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Grid.Column="4"
                     x:Name="OffsetYTextBox"
                     Text="0"
                     Background="#FF3C3C3C"
                     Foreground="White"
                     BorderBrush="#FF555555"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Padding="8,0"/>
        </Grid>

        <!-- Strategy description -->
        <TextBlock Grid.Row="5"
                   x:Name="StrategyDescText"
                   Text="Conflicts: existing layer properties are kept unchanged."
                   Foreground="#FF888888"
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Merge"
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderBrush="#FF0078D4"
                    Click="MergeButton_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    Height="28"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
