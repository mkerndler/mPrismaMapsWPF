<Window x:Class="mPrismaMapsWPF.Views.EditUnitNumberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Unit Number"
        Height="160" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Unit Number:"
                   Foreground="#FFCCCCCC"
                   Margin="0,0,0,8"/>

        <TextBox Grid.Row="1"
                 x:Name="ValueTextBox"
                 Background="#FF3C3C3C"
                 Foreground="White"
                 BorderBrush="#FF555555"
                 Padding="4,4"
                 FontSize="14"
                 KeyDown="ValueTextBox_KeyDown"/>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80" Height="28"
                    Margin="0,0,8,0"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    Click="OkButton_Click"/>
            <Button Content="Cancel"
                    Width="80" Height="28"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
