<Window x:Class="mPrismaMapsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mPrismaMapsWPF"
        xmlns:controls="clr-namespace:mPrismaMapsWPF.Controls"
        xmlns:converters="clr-namespace:mPrismaMapsWPF.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="768" Width="1280"
        WindowState="Maximized"
        Background="#FF1E1E1E">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF606060"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleToolbarButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PanelHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="Margin" Value="8,8,8,4"/>
        </Style>

    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenFileCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveFileCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ExportMpolCommand}"/>
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{Binding DeployMpolCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Y" Modifiers="Ctrl" Command="{Binding RedoCommand}"/>
        <KeyBinding Key="Z" Modifiers="Ctrl+Shift" Command="{Binding RedoCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding SelectAllCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedCommand}"/>
        <KeyBinding Key="Add" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Key="Subtract" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Key="Home" Command="{Binding ZoomToFitCommand}"/>
        <!-- Drawing shortcuts -->
        <KeyBinding Key="L" Command="{Binding SetDrawLineModeCommand}"/>
        <KeyBinding Key="P" Modifiers="Shift" Command="{Binding SetDrawPolylineModeCommand}"/>
        <KeyBinding Key="G" Command="{Binding SetDrawPolygonModeCommand}"/>
        <KeyBinding Key="P" Command="{Binding SetPanModeCommand}"/>
        <KeyBinding Key="V" Command="{Binding SetSelectModeCommand}"/>
        <KeyBinding Key="F7" Command="{Binding ToggleGridCommand}"/>
        <KeyBinding Key="F9" Command="{Binding ToggleSnapCommand}"/>
        <!-- Copy/Paste -->
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding CopyCommand}"/>
        <KeyBinding Key="V" Modifiers="Ctrl" Command="{Binding PasteCommand}"/>
        <!-- Zoom to Area -->
        <KeyBinding Key="Z" Command="{Binding SetZoomToAreaModeCommand}"/>
        <!-- Place Unit Number -->
        <KeyBinding Key="N" Command="{Binding SetPlaceUnitNumberModeCommand}"/>
        <!-- Draw Fairway -->
        <KeyBinding Key="F" Command="{Binding SetDrawFairwayModeCommand}"/>
        <!-- Lock -->
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding LockSelectedCommand}"/>
        <!-- Generate Unit Areas -->
        <KeyBinding Key="U" Modifiers="Ctrl+Shift" Command="{Binding GenerateUnitAreasCommand}"/>
        <!-- Generate Background Contours -->
        <KeyBinding Key="B" Modifiers="Ctrl+Shift" Command="{Binding GenerateBackgroundContoursCommand}"/>
        <!-- View transform shortcuts -->
        <KeyBinding Key="D0" Modifiers="Ctrl" Command="{Binding CenterOnOriginCommand}"/>
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding ToggleFlipXCommand}"/>
        <KeyBinding Key="J" Modifiers="Ctrl" Command="{Binding ToggleFlipYCommand}"/>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding ShowRotateViewDialogCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#FF2D2D2D" Foreground="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save" Command="{Binding SaveFileCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveFileAsCommand}"/>
                <MenuItem Header="Export _MPOL..." Command="{Binding ExportMpolCommand}" InputGestureText="Ctrl+E"/>
                <MenuItem Header="_Deploy MPOL..." Command="{Binding DeployMpolCommand}" InputGestureText="Ctrl+D"/>
                <MenuItem Header="_Restore Backup..." Command="{Binding RestoreBackupCommand}"/>
                <Separator/>
                <MenuItem Header="_Close" Command="{Binding CloseFileCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}" InputGestureText="Ctrl+Z">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xF054C;" FontFamily="{StaticResource MaterialIcons}" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}" InputGestureText="Ctrl+Y">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xF044E;" FontFamily="{StaticResource MaterialIcons}" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Select _All" Command="{Binding SelectAllCommand}" InputGestureText="Ctrl+A"/>
                <MenuItem Header="_Clear Selection" Command="{Binding ClearSelectionCommand}" InputGestureText="Esc"/>
                <Separator/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}" InputGestureText="Ctrl+V"/>
                <Separator/>
                <MenuItem Header="_Delete Selected" Command="{Binding DeleteSelectedCommand}" InputGestureText="Del">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xF01B4;" FontFamily="{StaticResource MaterialIcons}" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Delete by _Type" x:Name="DeleteByTypeMenu">
                    <!-- Populated dynamically in code-behind -->
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Lock Selected" Command="{Binding LockSelectedCommand}" InputGestureText="Ctrl+L">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xF033E;" FontFamily="{StaticResource MaterialIcons}" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Unlock All Entities" Command="{Binding UnlockAllEntitiesCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xF0FC6;" FontFamily="{StaticResource MaterialIcons}" FontSize="12"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding ZoomInCommand}" InputGestureText="+"/>
                <MenuItem Header="Zoom _Out" Command="{Binding ZoomOutCommand}" InputGestureText="-"/>
                <MenuItem Header="Zoom to _Fit" Command="{Binding ZoomToFitCommand}" InputGestureText="Home"/>
                <MenuItem Header="Zoom to _Area" Command="{Binding SetZoomToAreaModeCommand}" InputGestureText="Z"/>
                <MenuItem Header="Center on _Origin" Command="{Binding CenterOnOriginCommand}" InputGestureText="Ctrl+0"/>
                <Separator/>
                <MenuItem Header="Flip _Horizontal" Command="{Binding ToggleFlipXCommand}" IsCheckable="True" IsChecked="{Binding FlipX, Mode=OneWay}"/>
                <MenuItem Header="Flip _Vertical" Command="{Binding ToggleFlipYCommand}" IsCheckable="True" IsChecked="{Binding FlipY, Mode=OneWay}"/>
                <Separator/>
                <MenuItem Header="_Rotate View">
                    <MenuItem Header="0 (Reset)" Command="{Binding RotateViewCommand}" CommandParameter="0"/>
                    <MenuItem Header="90 CW" Command="{Binding RotateViewCommand}" CommandParameter="90"/>
                    <MenuItem Header="180" Command="{Binding RotateViewCommand}" CommandParameter="180"/>
                    <MenuItem Header="270 (90 CCW)" Command="{Binding RotateViewCommand}" CommandParameter="270"/>
                    <Separator/>
                    <MenuItem Header="Rotate +15" Command="{Binding RotateViewByCommand}" CommandParameter="15"/>
                    <MenuItem Header="Rotate -15" Command="{Binding RotateViewByCommand}" CommandParameter="-15"/>
                    <Separator/>
                    <MenuItem Header="_Custom Angle..." Command="{Binding ShowRotateViewDialogCommand}"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Reset All _Transforms" Command="{Binding ResetViewTransformsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Draw _Line" Command="{Binding SetDrawLineModeCommand}" InputGestureText="L"/>
                <MenuItem Header="Draw _Polyline" Command="{Binding SetDrawPolylineModeCommand}" InputGestureText="Shift+P"/>
                <MenuItem Header="Draw Poly_gon" Command="{Binding SetDrawPolygonModeCommand}" InputGestureText="G"/>
                <Separator/>
                <MenuItem Header="Place _Unit Number" Command="{Binding SetPlaceUnitNumberModeCommand}" InputGestureText="N"/>
                <MenuItem Header="Draw _Fairway" Command="{Binding SetDrawFairwayModeCommand}" InputGestureText="F"/>
                <Separator/>
                <MenuItem Header="Generate _Unit Areas" Command="{Binding GenerateUnitAreasCommand}" InputGestureText="Ctrl+Shift+U" ToolTip="Generate filled polygons for each unit number"/>
                <MenuItem Header="Generate _Background Contours" Command="{Binding GenerateBackgroundContoursCommand}" InputGestureText="Ctrl+Shift+B" ToolTip="Generate polygon outlines around background geometry"/>
                <Separator/>
                <MenuItem Header="_Delete Hidden Entities" Command="{Binding DeleteHiddenEntitiesCommand}" ToolTip="Delete all hidden/invisible entities"/>
                <MenuItem Header="Delete Entities _Outside Viewport" Command="{Binding DeleteEntitiesOutsideViewportCommand}" ToolTip="Delete all entities outside the current view"/>
                <MenuItem Header="Delete _Empty Layers" Command="{Binding LayerPanel.DeleteEmptyLayersCommand}" ToolTip="Delete all layers with no entities"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="1" Background="#FF2D2D2D">
            <ToolBar Background="#FF2D2D2D" Band="0" BandIndex="0">
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding OpenFileCommand}"
                        ToolTip="Open File (Ctrl+O)">
                    <TextBlock Text="&#xF0770;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding SaveFileCommand}"
                        ToolTip="Save File (Ctrl+S)">
                    <TextBlock Text="&#xF0193;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ExportMpolCommand}"
                        ToolTip="Export MPOL (Ctrl+E)">
                    <TextBlock Text="&#xF0207;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Separator Margin="8,4"/>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding UndoCommand}"
                        ToolTip="{Binding UndoDescription, StringFormat='Undo: {0} (Ctrl+Z)', FallbackValue='Undo (Ctrl+Z)'}">
                    <TextBlock Text="&#xF054C;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding RedoCommand}"
                        ToolTip="{Binding RedoDescription, StringFormat='Redo: {0} (Ctrl+Y)', FallbackValue='Redo (Ctrl+Y)'}">
                    <TextBlock Text="&#xF044E;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Separator Margin="8,4"/>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ZoomInCommand}"
                        ToolTip="Zoom In (+)">
                    <TextBlock Text="&#xF034B;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ZoomOutCommand}"
                        ToolTip="Zoom Out (-)">
                    <TextBlock Text="&#xF034A;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ZoomToFitCommand}"
                        ToolTip="Zoom to Fit (Home)">
                    <TextBlock Text="&#xF18F5;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding SetZoomToAreaModeCommand}"
                        ToolTip="Zoom to Area (Z)">
                    <TextBlock Text="&#xF0EF6;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Separator Margin="8,4"/>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsSelectMode}"
                              Command="{Binding SetSelectModeCommand}"
                              ToolTip="Select Mode (S)">
                    <TextBlock Text="&#xF01C0;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsPanMode}"
                              Command="{Binding SetPanModeCommand}"
                              ToolTip="Pan Mode (P)">
                    <TextBlock Text="&#xF0BB4;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <Separator Margin="8,4"/>
                <!-- Drawing Tools -->
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsDrawLineMode, Mode=OneWay}"
                              Command="{Binding SetDrawLineModeCommand}"
                              ToolTip="Draw Line (L)">
                    <TextBlock Text="&#xF055E;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsDrawPolylineMode, Mode=OneWay}"
                              Command="{Binding SetDrawPolylineModeCommand}"
                              ToolTip="Draw Polyline (Shift+P)">
                    <TextBlock Text="&#xF0561;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsDrawPolygonMode, Mode=OneWay}"
                              Command="{Binding SetDrawPolygonModeCommand}"
                              ToolTip="Draw Polygon (G)">
                    <TextBlock Text="&#xF0560;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <Separator Margin="8,4"/>
                <!-- Unit Number Tool -->
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsPlaceUnitNumberMode, Mode=OneWay}"
                              Command="{Binding SetPlaceUnitNumberModeCommand}"
                              ToolTip="Place Unit Number (N)">
                    <TextBlock Text="&#xF03A0;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <TextBlock Text="Pfx:" Foreground="#FF888888" VerticalAlignment="Center" Margin="4,0,2,0" FontSize="10"/>
                <TextBox Text="{Binding UnitNumberPrefix, UpdateSourceTrigger=PropertyChanged}"
                         Width="40" Height="24"
                         Background="#FF3C3C3C" Foreground="White"
                         BorderBrush="#FF555555"
                         VerticalContentAlignment="Center"
                         Padding="2,0"
                         ToolTip="Unit number prefix"/>
                <TextBlock Text="#:" Foreground="#FF888888" VerticalAlignment="Center" Margin="4,0,2,0" FontSize="10"/>
                <TextBox Text="{Binding UnitNextNumber, UpdateSourceTrigger=LostFocus}"
                         Width="40" Height="24"
                         Background="#FF3C3C3C" Foreground="White"
                         BorderBrush="#FF555555"
                         VerticalContentAlignment="Center"
                         Padding="2,0"
                         ToolTip="Next unit number"/>
                <TextBlock Text="H:" Foreground="#FF888888" VerticalAlignment="Center" Margin="4,0,2,0" FontSize="10"/>
                <TextBox Text="{Binding UnitTextHeight, UpdateSourceTrigger=PropertyChanged}"
                         Width="40" Height="24"
                         Background="#FF3C3C3C" Foreground="White"
                         BorderBrush="#FF555555"
                         VerticalContentAlignment="Center"
                         Padding="2,0"
                         ToolTip="Text height"/>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding UnitAutoIncrement}"
                              ToolTip="Auto-increment unit number">
                    <TextBlock Text="1+" FontSize="10" FontWeight="Bold"/>
                </ToggleButton>
                <Separator Margin="8,4"/>
                <!-- Fairway Tool -->
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsDrawFairwayMode, Mode=OneWay}"
                              Command="{Binding SetDrawFairwayModeCommand}"
                              ToolTip="Draw Fairway (F)">
                    <TextBlock Text="&#xF0583;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding GenerateUnitAreasCommand}"
                        ToolTip="Generate Unit Areas (Ctrl+Shift+U)">
                    <TextBlock Text="&#xF0FE6;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding GenerateBackgroundContoursCommand}"
                        ToolTip="Generate Background Contours (Ctrl+Shift+B)">
                    <TextBlock Text="&#xF0B76;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Separator Margin="8,4"/>
                <!-- Snap and Grid -->
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsSnapEnabled, Mode=OneWay}"
                              Command="{Binding ToggleSnapCommand}"
                              ToolTip="Toggle Snap (F9)">
                    <TextBlock Text="&#xF0758;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding IsGridVisible, Mode=OneWay}"
                              Command="{Binding ToggleGridCommand}"
                              ToolTip="Toggle Grid (F7)">
                    <TextBlock Text="&#xF02C1;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <TextBlock Text="Grid:" Foreground="White" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <TextBox Text="{Binding GridSpacing, UpdateSourceTrigger=PropertyChanged}"
                         Width="50" Height="24"
                         Background="#FF3C3C3C" Foreground="White"
                         BorderBrush="#FF555555"
                         VerticalContentAlignment="Center"
                         Padding="4,0"/>
                <Separator Margin="8,4"/>
                <!-- View Transform Tools -->
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding FlipX, Mode=OneWay}"
                              Command="{Binding ToggleFlipXCommand}"
                              ToolTip="Flip Horizontal (Ctrl+H)">
                    <TextBlock Text="&#xF10E7;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <ToggleButton Style="{StaticResource ToggleToolbarButtonStyle}"
                              IsChecked="{Binding FlipY, Mode=OneWay}"
                              Command="{Binding ToggleFlipYCommand}"
                              ToolTip="Flip Vertical (Ctrl+J)">
                    <TextBlock Text="&#xF10E8;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </ToggleButton>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ShowRotateViewDialogCommand}"
                        ToolTip="Rotate View (Ctrl+R)">
                    <TextBlock Text="&#xF0464;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding CenterOnOriginCommand}"
                        ToolTip="Center on Origin (Ctrl+0)">
                    <TextBlock Text="&#xF0044;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding ResetViewTransformsCommand}"
                        ToolTip="Reset View Transforms">
                    <TextBlock Text="&#xF0156;" FontFamily="{StaticResource MaterialIcons}" FontSize="16"/>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220" MinWidth="180"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Entity Viewer -->
            <Border Grid.Column="0" Background="#FF252526" BorderBrush="#FF3C3C3C" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Entities" Style="{StaticResource PanelHeaderStyle}"/>

                    <!-- Search Filter -->
                    <TextBox Grid.Row="1"
                             x:Name="EntityFilterTextBox"
                             Text="{Binding EntityViewer.FilterText, UpdateSourceTrigger=PropertyChanged}"
                             Background="#FF3C3C3C"
                             Foreground="White"
                             BorderBrush="#FF555555"
                             Margin="8,0,8,4"
                             Padding="4,2"
                             Tag="Search entities...">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                                <TextBlock Text="{TemplateBinding Tag}"
                                                           Foreground="#FF888888"
                                                           Margin="6,2,0,0"
                                                           IsHitTestVisible="False"
                                                           Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Grouping Options -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8,0,8,4">
                        <TextBlock Text="Group:" Foreground="#FFCCCCCC" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <RadioButton Content="None" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"
                                     IsChecked="{Binding EntityViewer.IsGroupByNone}"
                                     GroupName="EntityGrouping"/>
                        <RadioButton Content="Type" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"
                                     IsChecked="{Binding EntityViewer.IsGroupByType}"
                                     GroupName="EntityGrouping"/>
                        <RadioButton Content="Layer" Foreground="White" VerticalAlignment="Center"
                                     IsChecked="{Binding EntityViewer.IsGroupByLayer}"
                                     GroupName="EntityGrouping"/>
                    </StackPanel>

                    <!-- Flat Entity List (when not grouped) -->
                    <ListBox Grid.Row="3"
                             x:Name="EntityListBox"
                             ItemsSource="{Binding EntityViewer.FilteredEntities}"
                             SelectionMode="Extended"
                             SelectionChanged="EntityListBox_SelectionChanged"
                             MouseDoubleClick="EntityListBox_MouseDoubleClick"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             Margin="4"
                             VirtualizingStackPanel.IsVirtualizing="True"
                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Visibility="{Binding EntityViewer.IsGroupByNone, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#FF0078D4"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#FF3C3C3C"/>
                                                </Trigger>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsSelected" Value="True"/>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter TargetName="Border" Property="Background" Value="#FF1E90FF"/>
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding TypeIcon}" Foreground="#FF888888" Width="16" FontFamily="Consolas"/>
                                    <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Zoom to Entity" Click="ZoomToEntity_Click"/>
                                <Separator/>
                                <MenuItem Header="Delete" InputGestureText="Del" Click="DeleteEntity_Click"/>
                                <Separator/>
                                <MenuItem Header="Properties" Click="ShowProperties_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>

                    <!-- Grouped Entity Tree (when grouped) -->
                    <TreeView Grid.Row="3"
                              x:Name="EntityTreeView"
                              ItemsSource="{Binding EntityViewer.GroupedEntities}"
                              Background="Transparent"
                              Foreground="White"
                              BorderThickness="0"
                              Margin="4"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              SelectedItemChanged="EntityTreeView_SelectedItemChanged"
                              MouseDoubleClick="EntityTreeView_MouseDoubleClick"
                              Visibility="{Binding EntityViewer.IsGroupByNone, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Entities}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text=" (" Foreground="#FF888888"/>
                                    <TextBlock Text="{Binding Count}" Foreground="#FF888888"/>
                                    <TextBlock Text=")" Foreground="#FF888888"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </HierarchicalDataTemplate.ItemContainerStyle>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Zoom to Entity" Click="TreeViewZoomToEntity_Click"/>
                                                    <Separator/>
                                                    <MenuItem Header="Delete" InputGestureText="Del" Click="TreeViewDeleteEntity_Click"/>
                                                    <Separator/>
                                                    <MenuItem Header="Properties" Click="TreeViewShowProperties_Click"/>
                                                </ContextMenu>
                                            </StackPanel.ContextMenu>
                                            <TextBlock Text="{Binding TypeIcon}" Foreground="#FF888888" Width="16" FontFamily="Consolas"/>
                                            <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <!-- Entity Count Status -->
                    <TextBlock Grid.Row="4"
                               Margin="8,4"
                               FontSize="10"
                               Foreground="#FF888888">
                        <Run Text="{Binding EntityViewer.TotalCount, Mode=OneWay}"/>
                        <Run Text=" entities"/>
                        <Run Text=" ("/>
                        <Run Text="{Binding EntityViewer.SelectedCount, Mode=OneWay}"/>
                        <Run Text=" selected)"/>
                    </TextBlock>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          Background="#FF3C3C3C"/>

            <!-- Center - CAD Canvas -->
            <controls:CadCanvas Grid.Column="2"
                                x:Name="CadCanvas"
                                IsPanMode="{Binding IsPanMode}"/>

            <GridSplitter Grid.Column="3" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          Background="#FF3C3C3C"/>

            <!-- Right Panel - Properties and Layers -->
            <Border Grid.Column="4" Background="#FF252526" BorderBrush="#FF3C3C3C" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Properties Panel -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Properties" Style="{StaticResource PanelHeaderStyle}"/>

                        <TextBlock Grid.Row="1"
                                   Text="{Binding PropertiesPanel.SelectionSummary}"
                                   Foreground="#FFAAAAAA"
                                   FontSize="11"
                                   Margin="8,0,8,8"/>

                        <!-- Editable Properties -->
                        <Grid Grid.Row="2" Margin="8,0,8,8"
                              Visibility="{Binding PropertiesPanel.HasSelection, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Layer Edit -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Layer:" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding PropertiesPanel.AvailableLayers}"
                                          SelectedItem="{Binding PropertiesPanel.SelectedLayer}"
                                          Margin="4,0"/>
                                <Button Grid.Column="2"
                                        Content="Apply"
                                        Command="{Binding PropertiesPanel.ApplyLayerChangeCommand}"
                                        Padding="8,2"
                                        Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"/>
                            </Grid>

                            <!-- Color Edit -->
                            <Grid Grid.Row="1" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Color:" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding PropertiesPanel.AvailableColors}"
                                          SelectedItem="{Binding PropertiesPanel.SelectedColorItem}"
                                          Margin="4,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Rectangle Width="14" Height="14"
                                                           Fill="{Binding WpfColor, Converter={StaticResource ColorToBrushConverter}}"
                                                           Margin="0,0,6,0"
                                                           Stroke="Gray" StrokeThickness="0.5"/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Grid.Column="2"
                                        Content="Apply"
                                        Command="{Binding PropertiesPanel.ApplyColorChangeCommand}"
                                        Padding="8,2"
                                        Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"/>
                            </Grid>

                            <!-- Property List -->
                            <ListView Grid.Row="2"
                                      ItemsSource="{Binding PropertiesPanel.Properties}"
                                      Background="Transparent"
                                      Foreground="White"
                                      BorderThickness="0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Property" Width="80" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Value" Width="90" DisplayMemberBinding="{Binding Value}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                        <!-- No Selection Message -->
                        <TextBlock Grid.Row="2"
                                   Text="Select an entity to view properties"
                                   Foreground="#FF666666"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding PropertiesPanel.HasSelection, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"/>
                    </Grid>

                    <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                  Background="#FF3C3C3C"/>

                    <!-- Layers Panel -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Layers" Style="{StaticResource PanelHeaderStyle}"/>

                        <!-- Layer buttons -->
                        <WrapPanel Grid.Row="1" Margin="8,0,8,4">
                            <Button Content="All On"
                                    Command="{Binding LayerPanel.ShowAllLayersCommand}"
                                    Padding="6,2" Margin="0,0,2,2"
                                    Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"
                                    ToolTip="Show all layers"/>
                            <Button Content="All Off"
                                    Command="{Binding LayerPanel.HideAllLayersCommand}"
                                    Padding="6,2" Margin="0,0,2,2"
                                    Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"
                                    ToolTip="Hide all layers"/>
                            <Button Content="Toggle"
                                    Command="{Binding LayerPanel.ToggleSelectedLayersVisibilityCommand}"
                                    Padding="6,2" Margin="0,0,2,2"
                                    Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"
                                    ToolTip="Toggle visibility of selected layers"/>
                            <Button Content="Isolate"
                                    Command="{Binding LayerPanel.IsolateSelectedLayersCommand}"
                                    Padding="6,2" Margin="0,0,2,2"
                                    Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"
                                    ToolTip="Show only selected layers"/>
                            <Button Content="Lock"
                                    Command="{Binding LayerPanel.ToggleSelectedLayersLockCommand}"
                                    Padding="6,2" Margin="0,0,2,2"
                                    Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555"
                                    ToolTip="Toggle lock on selected layers"/>
                            <Button Content="Delete"
                                    Command="{Binding LayerPanel.DeleteSelectedLayersCommand}"
                                    Padding="6,2" Margin="0,0,2,2"
                                    Background="#FF8B0000" Foreground="White" BorderBrush="#FF555555"
                                    ToolTip="Delete selected layers"/>
                        </WrapPanel>

                        <!-- Selection info -->
                        <TextBlock Grid.Row="2"
                                   Margin="8,0,8,2"
                                   FontSize="10"
                                   Foreground="#FF888888">
                            <Run Text="{Binding LayerPanel.SelectedLayerCount, Mode=OneWay}"/>
                            <Run Text=" layer(s) selected"/>
                        </TextBlock>

                        <ListBox Grid.Row="3"
                                 x:Name="LayersListBox"
                                 ItemsSource="{Binding LayerPanel.Layers}"
                                 SelectedItem="{Binding LayerPanel.SelectedLayer}"
                                 SelectionMode="Extended"
                                 SelectionChanged="LayersListBox_SelectionChanged"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Margin="4">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsVisible}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,4,0"
                                                  ToolTip="Visible"/>
                                        <TextBlock Text="&#xF033E;" FontFamily="{StaticResource MaterialIcons}" FontSize="10"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"
                                                   Cursor="Hand"
                                                   ToolTip="Locked"
                                                   MouseLeftButtonDown="LayerLockIcon_MouseLeftButtonDown">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#FF555555"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                                            <Setter Property="Foreground" Value="#FFFFCC00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Rectangle Width="12" Height="12"
                                                   Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Indicator -->
        <Border Grid.Row="2"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Width="200" Height="20"
                             Value="{Binding LoadProgress}"
                             Maximum="100"/>
                <TextBlock Text="Loading..."
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="#FF007ACC" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem MinWidth="200">
                <TextBlock Text="{Binding DrawingStatusText}" FontStyle="Italic"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="X: "/>
                    <TextBlock Text="{Binding MouseX, StringFormat=F4}" Width="80"/>
                    <TextBlock Text="Y: " Margin="16,0,0,0"/>
                    <TextBlock Text="{Binding MouseY, StringFormat=F4}" Width="80"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Snap: "/>
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Off"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSnapEnabled}" Value="True">
                                        <Setter Property="Text" Value="On"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text=" (" Margin="2,0,0,0"/>
                    <TextBlock Text="{Binding GridSpacing}"/>
                    <TextBlock Text=")"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Rot: "/>
                    <TextBlock Text="{Binding ViewRotation, StringFormat=F0}"/>
                    <TextBlock Text=""/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Entities: "/>
                    <TextBlock Text="{Binding EntityCount, StringFormat=N0}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Selected: "/>
                    <TextBlock Text="{Binding SelectedCount, StringFormat=N0}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
